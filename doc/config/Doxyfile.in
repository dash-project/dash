# Project related

PROJECT_NAME            = "DASH"
PROJECT_NUMBER          = @DASH_VERSION_MAJOR@.@DASH_VERSION_MINOR@.@DASH_VERSION_PATCH@
STRIP_FROM_PATH         = @PROJECT_SOURCE_DIR@ \
                          @PROJECT_BINARY_DIR@
INPUT                   = "@PROJECT_SOURCE_DIR@/doc/config/mainpage.dox" \
                          "@PROJECT_SOURCE_DIR@/dart-if/v3.2/include" \
                          "@PROJECT_SOURCE_DIR@/dash/include" \
                          "@PROJECT_SOURCE_DIR@/dash/examples"
OUTPUT_DIRECTORY        = "doc"
FILE_PATTERNS           = *.h \
                        = *.c \
                        = *.cpp \
                          *.cc
EXAMPLE_PATH            = "@PROJECT_SOURCE_DIR@/dash/examples"
EXAMPLE_RECURSIVE       = YES
EXCLUDE_PATTERNS        = */test/* \
                          */gtest/* \
                          */internal/*
EXCLUDE_SYMBOLS         = *::test::* \
                          *::testing::* \
                          *::internal::*
RECURSIVE               = YES
USE_MDFILE_AS_MAINPAGE  = @doxy_main_page@
ALWAYS_DETAILED_SEC     = YES
INLINE_INHERITED_MEMB   = YES
FULL_PATH_NAMES         = YES
STRIP_FROM_PATH         = "@CMAKE_SOURCE_DIR@"
STRIP_FROM_INC_PATH     =
SHORT_NAMES             = YES
JAVADOC_AUTOBRIEF       = YES
QT_AUTOBRIEF            = NO
MULTILINE_CPP_IS_BRIEF  = NO
INHERIT_DOCS            = YES
SEPARATE_MEMBER_PAGES   = NO
TAB_SIZE                = 2
MARKDOWN_SUPPORT        = YES
DISTRIBUTE_GROUP_DOC    = YES
SUBGROUPING             = YES
SOURCE_BROWSER          = YES
INLINE_SOURCES          = YES
STRIP_CODE_COMMENTS     = YES
REFERENCED_BY_RELATION  = YES
REFERENCES_RELATION     = YES
REFERENCES_LINK_SOURCE  = YES
SOURCE_TOOLTIPS         = YES
USE_HTAGS               = YES
VERBATIM_HEADERS        = YES

GENERATE_TREEVIEW       = YES

# Custom commands

ALIASES                 = concept{1}="@ingroup \1\n@par Implemented concept:\n@ref \1" \
                          blocking="\b Calls to this routine are blocking" \
                          async="\b Calls to this routine are non-blocking" \
                          complexity="\n@par Time complexity\n" \
                          commtype="\n@par Communication model\n" \
                          collective_op="\b Collective operation\n" \
                          local_op="\b Local operation\n" \
                          onesided_op="\b One-sided operation\n" \
                          thread_safety{1}="\par Thread safety\n\1" \
                          threadsafe="\thread_safety{This function is safe to be called by <i>multiple threads in parallel</i>.}" \
                          threadsafe_serial="\thread_safety{This function is safe to be called from a multi-threaded context by <i>at most one thread</i>.}" \
                          threadsafe_none="\thread_safety{This function is <i>not thread-safe</i>.}"

# Graphs

HAVE_DOT                = YES
COLLABORATION_GRAPH     = YES
CLASS_GRAPH             = YES
UML_LOOK                = YES
TEMPLATE_RELATIONS      = YES
INTERACTIVE_SVG         = YES


# Build related

EXTRACT_ALL             = NO
EXTRACT_PRIVATE         = NO
EXTRACT_PACKAGE         = NO
EXTRACT_STATIC          = YES
EXTRACT_LOCAL_CLASSES   = YES
EXTRACT_LOCAL_METHODS   = NO
EXTRACT_ANON_NSPACES    = NO
HIDE_UNDOC_MEMBERS      = NO
SHOW_FILES              = YES
SHOW_INCLUDE_FILES      = YES
SHOW_NAMESPACES         = YES
HIDE_UNDOC_CLASSES      = NO
HIDE_FRIEND_COMPOUNDS   = YES
GENERATE_TODOLIST       = YES
GENERATE_TESTLIST       = YES
GENERATE_BUGLIST        = YES
GENERATE_DEPRECATEDLIST = YES

SORT_MEMBERS_CTORS_1ST  = YES

ENABLE_PREPROCESSING    = YES
MACRO_EXPANSION         = YES
EXPAND_ONLY_PREDEF      = NO
SEARCH_INCLUDES         = YES
INCLUDE_PATH            = 
INCLUDE_FILE_PATTERNS   = 
PREDEFINED              = protected=private \
                          DOXYGEN \
                          DASH_ENABLE_HWLOC \
                          DASH_ENABLE_PAPI \
                          DASH_ENABLE_HDF5 \
                          DASH_ENABLE_NUMALIB \
                          DASH_ENABLE_LIKWID \
                          DASH_ENABLE_MKL \
                          DASH_ENABLE_SCALAPACK \
                          DASH_ENABLE_ASSERTIONS \
                          DART_IMPLEMENTATIONS="mpi" \
                          MPI_IMPL_ID="mpi_impl_id"
EXPAND_AS_DEFINED       = 
SKIP_FUNCTION_MACROS    = YES

# Doxygen build options
WARNINGS                = YES
WARN_IF_UNDOCUMENTED    = YES
WARN_IF_DOC_ERROR       = YES
WARN_NO_PARAMDOC        = YES

# HTML options
GENERATE_HTML           = YES
HTML_OUTPUT             = html
HTML_FILE_EXTENSION     = .html
HTML_EXTRA_STYLESHEET   = "@PROJECT_SOURCE_DIR@/doc/config/css/dash-doxygen.css" \
                          "@PROJECT_SOURCE_DIR@/doc/config/css/dash-navtree.css" \
                          "@PROJECT_SOURCE_DIR@/doc/config/css/dash-tabs.css" \
                          "@PROJECT_SOURCE_DIR@/doc/config/css/dash-search.css"

# LaTex options
GENERATE_LATEX          = YES
LATEX_OUTPUT            = latex
LATEX_CMD_NAME          = latex
MAKEINDEX_CMD_NAME      = makeindex
COMPACT_LATEX           = NO
PAPER_TYPE              = a4
EXTRA_PACKAGES          = 
LATEX_HEADER            = 
LATEX_FOOTER            = 
LATEX_EXTRA_FILES       = 
PDF_HYPERLINKS          = YES
USE_PDFLATEX            = YES
LATEX_BATCHMODE         = NO
LATEX_HIDE_INDICES      = NO
LATEX_SOURCE_CODE       = NO
LATEX_BIB_STYLE         = plain

